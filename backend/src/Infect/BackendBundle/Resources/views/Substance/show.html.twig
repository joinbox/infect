    {% extends 'InfectBackendBundle::main.html.twig' %}



{% block javascript %}
{% endblock %}

{% block pageTitle %}
    {% trans %}Substance{% endtrans %}
{% endblock %}

{% block content %}

    <form action="{{ path('substance') }}" method="POST" style="float:left;margin-right:10px;">
        <button type="submit" class="btn btn-info" value="">{% trans %}Zurück{% endtrans %}</button>
    </form>

    <form action="{{ path('substance_delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button type="submit" class="btn btn-danger">{% trans %}Löschen{% endtrans %}</button>
    </form>

    <table id="datatable" class="table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Compounds{% endtrans %}</th>
                <td>
                    {% for compound in entity.compounds %}
                        <a href="{{ path('compound_edit', { 'id': compound.id }) }}" data-toggle="tooltip" title="{% trans %}editieren{% endtrans %}" class="btn btn-mini btn-success">{{ compound }}</a>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
    
{% endblock %}


