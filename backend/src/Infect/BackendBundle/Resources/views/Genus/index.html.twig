{% extends 'InfectBackendBundle::main.html.twig' %}


{% block javascript %}
{% endblock %}

{% block pageTitle %}
     {% trans %}Genus{% endtrans %} 
{% endblock %}

{% block content %}

            <form action="{{ path('genus_new') }}" method="POST">
            <button type="submit" class="btn btn-success">
                {% trans with {'%entity%': 'Genus'|trans} %}%entity% hinzuf√ºgen{% endtrans %}
            </button>        
        </form>
    
    <table id="datatable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="span1"></th>                                                                <th>Name</th>
                <th>{% trans %}Species{% endtrans %}</th>                   
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                
                <td>
                    <div class="btn-group">
                        <a href="{{ path('genus_edit', { 'id': entity.id }) }}" data-toggle="tooltip" title="{% trans %}editieren{% endtrans %}" class="btn btn-mini btn-success"><i class="icon-pencil"></i></a>
                        <a href="{{ path('genus_show', { 'id': entity.id }) }}" data-toggle="tooltip" title="{% trans %}Details{% endtrans %}" class="btn btn-mini btn-info"><i class="icon-zoom-in"></i></a>
                    </div>
                </td>
                <td>{{ entity.name }}</td>
                <td>
                    {% for specie in entity.species %}
                        <span class="label label-info" style="">{{ specie.name }}</span>
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>     

{% endblock %}

