{% extends 'InfectBackendBundle::main.html.twig' %}


{% block javascript %}
{% endblock %}

{% block pageTitle %}
     {% trans %}Species{% endtrans %} 
{% endblock %}

{% block content %}

            <form action="{{ path('species_new') }}" method="POST">
            <button type="submit" class="btn btn-success">
                {% trans with {'%entity%': 'Species'|trans} %}%entity% hinzuf√ºgen{% endtrans %}
            </button>        
        </form>
    
    <table id="datatable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="span1"></th>                                                                <th>Name</th>
                                   
            <th>{% trans %}Genus{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                
                <td>
                    <div class="btn-group">
                        <a href="{{ path('species_edit', { 'id': entity.id }) }}" data-toggle="tooltip" title="{% trans %}editieren{% endtrans %}" class="btn btn-mini btn-success"><i class="icon-pencil"></i></a>
                        <a href="{{ path('species_show', { 'id': entity.id }) }}" data-toggle="tooltip" title="{% trans %}Details{% endtrans %}" class="btn btn-mini btn-info"><i class="icon-zoom-in"></i></a>
                    </div>
                </td>
                <td>{{ entity }}</td>
                <td>{% if entity.genus %}
                        <span class="label label-info" style="">{{ entity.genus.name }}</span>
                    {% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>     

{% endblock %}

