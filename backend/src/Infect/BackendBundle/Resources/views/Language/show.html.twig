    {% extends 'InfectBackendBundle::main.html.twig' %}



{% block javascript %}
{% endblock %}

{% block pageTitle %}
    {% trans %}Language{% endtrans %}
{% endblock %}

{% block content %}

    <form action="{{ path('language') }}" method="POST" style="float:left;margin-right:10px;">
        <button type="submit" class="btn btn-info" value="">{% trans %}Zurück{% endtrans %}</button>
    </form>

    <form action="{{ path('language_delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button type="submit" class="btn btn-danger">{% trans %}Löschen{% endtrans %}</button>
    </form>

    <table id="datatable" class="table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Iso2</th>
                <td>{{ entity.iso2 }}</td>
            </tr>
        </tbody>
    </table>
    
{% endblock %}


