{% extends 'InfectBackendBundle::main.html.twig' %}


{% block javascript %}
{% endblock %}

{% block pageTitle %}
     {% trans %}Language{% endtrans %} 
{% endblock %}

{% block content %}

            <form action="{{ path('language_new') }}" method="POST">
            <button type="submit" class="btn btn-success">
                {% trans with {'%entity%': 'Language'|trans} %}%entity% hinzuf√ºgen{% endtrans %}
            </button>        
        </form>
    
    <table id="datatable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="span1"></th>                                                                <th>{% trans %}Name{% endtrans %}</th>
                                                                <th>{% trans %}Iso2{% endtrans %}</th>
                <th>{% trans %}Countries{% endtrans %}</th>
                                   
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                

                <td>
                    <div class="btn-group">
                        <a href="{{ path('language_edit', { 'id': entity.id }) }}" data-toggle="tooltip" title="{% trans %}editieren{% endtrans %}" class="btn btn-mini btn-success"><i class="icon-pencil"></i></a>
                        <a href="{{ path('language_show', { 'id': entity.id }) }}" data-toggle="tooltip" title="{% trans %}Details{% endtrans %}" class="btn btn-mini btn-info"><i class="icon-zoom-in"></i></a>
                    </div>
                </td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.iso2 }}</td>
                <td>
                    {% for country in entity.countries %}
                        <span class="label label-info" style="min-width:25px;text-align:center;margin-right:5px;">{{ country }}</span>
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>     

{% endblock %}

