{% extends 'InfectBackendBundle::main.html.twig' %}


{% block javascript %}
{% endblock %}

{% block pageTitle %}
     {% trans %}Resistance{% endtrans %} 
{% endblock %}

{% block content %}

            <form action="{{ path('resistance_new') }}" method="POST">
            <button type="submit" class="btn btn-success">
                {% trans with {'%entity%': 'Resistance'|trans} %}%entity% hinzuf√ºgen{% endtrans %}
            </button>        
        </form>
    
    <table id="datatable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="span1"></th>
                <th>{% trans %}Bacteria{% endtrans %}</th>
                <th>{% trans %}Compound{% endtrans %}</th>                                                                
                <th>Resistance Manual</th>
                <th>Resistance Fetch</th>                                   
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('resistance_edit', { 'id': entity.id }) }}" data-toggle="tooltip" title="{% trans %}editieren{% endtrans %}" class="btn btn-mini btn-success"><i class="icon-pencil"></i></a>
                        <a href="{{ path('resistance_show', { 'id': entity.id }) }}" data-toggle="tooltip" title="{% trans %}Details{% endtrans %}" class="btn btn-mini btn-info"><i class="icon-zoom-in"></i></a>
                    </div>
                </td>
                <td>{{ entity.bacteria }}</td>
                <td>{{ entity.compound }}</td>
                <td><span class="label label-info" style="">{{ entity.resistancemanual }}</span></td>
                <td><span class="label label-info" style="">{{ entity.resistancefetch }}</span></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>     

{% endblock %}

