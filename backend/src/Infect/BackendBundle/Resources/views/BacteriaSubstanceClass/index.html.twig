{% extends 'InfectBackendBundle::main.html.twig' %}


{% block javascript %}
{% endblock %}

{% block pageTitle %}
     {% trans %}Resistance{% endtrans %} 
{% endblock %}

{% block content %}

            <form action="{{ path('bacteriaSubstanceClass_new') }}" method="POST">
            <button type="submit" class="btn btn-success">
                {% trans with {'%entity%': 'Resistance'|trans} %}%entity% hinzuf√ºgen{% endtrans %}
            </button>        
        </form>
    
    <table id="datatable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="span1"></th>
                <th>{% trans %}Bacteria{% endtrans %}</th>
                <th>{% trans %}Substance Class{% endtrans %}</th>
                <th>Resistance Default</th>
                <th>Resistance User</th>
                <th>Resistance Import</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('bacteriaSubstanceClass_edit', { 'id_bacteria': entity.bacteria.id, 'id_substanceClass': entity.substanceClass.id }) }}" data-toggle="tooltip" title="{% trans %}editieren{% endtrans %}" class="btn btn-mini btn-success"><i class="icon-pencil"></i></a>
                        <a href="{{ path('bacteriaSubstanceClass_show', { 'id_bacteria': entity.bacteria.id, 'id_substanceClass': entity.substanceClass.id }) }}" data-toggle="tooltip" title="{% trans %}Details{% endtrans %}" class="btn btn-mini btn-info"><i class="icon-zoom-in"></i></a>
                    </div>
                </td>
                <td>{{ entity.bacteria }}</td>
                <td>{{ entity.substanceClass }}</td>
                <td>
                    {% if entity.resistanceDefault == 1 %}
                        <span class="label label-success" style="">low</span>
                    {% elseif entity.resistanceDefault == 2 %}
                        <span class="label label-warning" style="">intermediate</span>
                    {% elseif entity.resistanceDefault == 3 %}
                        <span class="label label-important" style="">high</span>
                    {% endif %}
                </td>
                <td><span class="label label-info" style="">{{ entity.resistanceUser }}</span></td>
                <td><span class="label label-info" style="">{{ entity.resistanceImport }}</span></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>     

{% endblock %}

