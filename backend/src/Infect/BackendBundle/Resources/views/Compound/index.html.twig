{% extends 'InfectBackendBundle::main.html.twig' %}


{% block javascript %}
{% endblock %}

{% block pageTitle %}
     {% trans %}Compound{% endtrans %} 
{% endblock %}

{% block content %}

            <form action="{{ path('compound_new') }}" method="POST">
            <button type="submit" class="btn btn-success">
                {% trans with {'%entity%': 'Compound'|trans} %}%entity% hinzuf√ºgen{% endtrans %}
            </button>        
        </form>
    
    <table id="datatable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="span1"></th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>Iv</th>
                <th>Po</th>                                   
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('compound_edit', { 'id': entity.id }) }}" data-toggle="tooltip" title="{% trans %}editieren{% endtrans %}" class="btn btn-mini btn-success"><i class="icon-pencil"></i></a>
                        <a href="{{ path('compound_show', { 'id': entity.id }) }}" data-toggle="tooltip" title="{% trans %}Details{% endtrans %}" class="btn btn-mini btn-info"><i class="icon-zoom-in"></i></a>
                    </div>
                </td>
                <td>
                    {{ entity }}
                </td>
                <td>
                    {% if entity.iv %}
                        <span class="label label-success" style="width:16px;height:16px;text-align:center;"><i class="icon-ok"></i></span>
                    {% else %}
                        <span class="label label-error" style="width:16px;height:16px;text-align:center;"><i class="icon-remove"></i></span>
                    {% endif %}
                </td>
                <td>
                    {% if entity.po %}
                        <span class="label label-success" style="width:16px;height:16px;text-align:center;"><i class="icon-ok"></i></span>
                    {% else %}
                        <span class="label label-error" style="width:16px;height:16px;text-align:center;"><i class="icon-remove"></i></span>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>     

{% endblock %}

