<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Infect\BackendBundle\Entity\Therapy" table="therapy">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <many-to-one field="idDiagnosis" target-entity="Diagnosis">
      <join-columns>
        <join-column name="id_diagnosis" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="idCompounds" target-entity="Compound" inversed-by="idTherapy">
      <join-table name="therapy_compounds">
        <join-columns>
          <join-column name="id_therapy" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_compounds" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="idLanguage" target-entity="Language" inversed-by="idTherapy">
      <join-table name="therapylocale">
        <join-columns>
          <join-column name="id_therapy" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_language" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
