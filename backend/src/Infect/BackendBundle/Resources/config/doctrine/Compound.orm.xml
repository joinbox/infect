<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Infect\BackendBundle\Entity\Compound" table="compound">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="iv" type="boolean" column="iv" nullable="false"/>
    <field name="po" type="boolean" column="po" nullable="false"/>
    <many-to-many field="idTherapy" target-entity="Therapy" mapped-by="idCompounds"/>
    <many-to-many field="idSubstance" target-entity="Substance" inversed-by="idCompound">
      <join-table name="compound_substance">
        <join-columns>
          <join-column name="id_compound" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_substance" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="idLanguage" target-entity="Language" inversed-by="idCompound">
      <join-table name="compoundlocale">
        <join-columns>
          <join-column name="id_compound" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_language" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
