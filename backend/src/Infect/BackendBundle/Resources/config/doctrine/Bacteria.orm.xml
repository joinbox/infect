<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Infect\BackendBundle\Entity\Bacteria" table="bacteria">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="gram" type="boolean" column="gram" nullable="false"/>
    <field name="aerobic" type="boolean" column="aerobic" nullable="false"/>
    <field name="aerobicOptional" type="boolean" column="aerobic-optional" nullable="false"/>
    <field name="anaerobic" type="boolean" column="anaerobic" nullable="false"/>
    <field name="anaerobicOptional" type="boolean" column="anaerobic-optional" nullable="false"/>
    <many-to-one field="idShape" target-entity="Shape">
      <join-columns>
        <join-column name="id_shape" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idSpecies" target-entity="Species">
      <join-columns>
        <join-column name="id_species" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idGrouping" target-entity="Grouping">
      <join-columns>
        <join-column name="id_grouping" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="idDiagnosis" target-entity="Diagnosis" mapped-by="idBacteria"/>
    <many-to-many field="idLanguage" target-entity="Language" inversed-by="idBacteria">
      <join-table name="bacterialocale">
        <join-columns>
          <join-column name="id_bacteria" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_language" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
